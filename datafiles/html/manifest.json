{
  "$schema": "https://json.schemastore.org/web-manifest",
  "name": "GOTweb-FE",
  "short_name": "GOTweb-FE",
  "display": "standalone",
  "categories": ["games", "entertainment"],
  "description": "Go-Tibia's WASM + PWA experiment",
  "shortcuts": [{"name": "GOTweb-FE WASM App", "url": "/app/", "description": "Main WASM+PWA experiment"}],
  "handle_links": "auto",
  "orientation": "landscape",
  "prefer_related_applications": false,

  "id": "gotweb-fe",
  "start_url": "/app/",
  "theme_color": "#444444",
  "background_color": "#444444",
  "icons": [
    {
      "src": "/app/go-tibia.png",
      "sizes": "128x128",
      "purpose": "any",
      "type": "image/png"
    },
    {
      "src": "/app/go-tibia-192.png",
      "sizes": "192x192",
      "purpose": "any",
      "type": "image/png"
    },
    {
      "src": "/app/go-tibia-512.png",
      "sizes": "512x512",
      "purpose": "any",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "/pic/1",
      "sizes": "640x480",
      "form_factor": "wide",
      "label": "Main background"
    }
  ],

  "share_target": {
    "action": "/app/_share-target-handler",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "jpegs",
          "accept": ["image/jpeg", ".jpg", ".jpeg"]
        },
        {
          "name": "pngs",
          "accept": ["image/png", ".png"]
        },
        {
          "name": "graphs",
          "accept": "image/svg+xml"
        },
        {
          "name": "images",
          "accept": ["image/*"]
        },
        {
          "name": "plaintextfiles",
          "accept": ["text/plain", ".txt"]
        },
        {
          "name": "records",
          "accept": ["text/csv", ".csv"]
        },
        {
          "name": "textfiles",
          "accept": ["text/*"]
        },
        {
          "name": "otherfiles",
          "accept": ["application/octet-stream"]
        }
      ]
    }
  },

  "launch_handler": {
    "client_mode": ["focus-existing"]
  },

  "display_override": ["window-controls-overlay"],
  "scope": "/"
}
